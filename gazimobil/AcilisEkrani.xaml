<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gazimobil.AcilisEkrani">

    <Grid BackgroundColor="#1b3e75" Padding="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="280" />
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image Source="gazi_logo.png" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,-20" Grid.Row="0" Grid.Column="1" />
        <Label Text="Gazi Mobil" FontFamily="SofiaPro" HorizontalOptions="Center" FontSize="70" VerticalOptions="Center" Margin="0,10,0,-20" Grid.Row="1" Grid.Column="1" TextColor="White"/>
        <Label Text="Gazili olmak ayrıcalıktır!" FontSize="40" FontFamily="SatisfyRegular" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,0" Grid.Row="2" Grid.Column="1" TextColor="White"/>
    </Grid>
</ContentPage>
